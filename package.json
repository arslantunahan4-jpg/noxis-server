{
  "name": "noxis",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --port 5000 --host",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.cjs",
    "start:railway": "node server-railway.js",
    "restore": "./restore-full-version.sh",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder --mac",
    "cap:sync": "npm run build && npx cap sync android",
    "cap:build": "npm run build && npx cap sync android && cd android && ./gradlew assembleDebug",
    "cap:build:release": "npm run build && npx cap sync android && cd android && ./gradlew assembleRelease"
  },
  "build": {
    "appId": "com.noxis.player",
    "productName": "Noxis Player",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns",
      "category": "public.app-category.video"
    },
    "dmg": {
      "title": "Noxis Player",
      "backgroundColor": "#000000"
    }
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capgo/cli": "^7.41.0",
    "@supabase/supabase-js": "^2.89.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "framer-motion": "^11.18.2",
    "helmet": "^8.1.0",
    "hls.js": "^1.6.15",
    "lodash.throttle": "^4.1.1",
    "lru-cache": "^11.2.4",
    "mongoose": "^8.0.0",
    "opensubtitles-api": "^5.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.20.0",
    "webtorrent": "^2.8.5"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "vite": "^5.4.21"
  }
}
